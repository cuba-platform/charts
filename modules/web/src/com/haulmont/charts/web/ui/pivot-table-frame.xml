<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd"
        caption="msg://screenCaption"
        class="com.haulmont.charts.web.ui.PivotTableController"
        messagesPack="com.haulmont.charts.web.ui">
    <dsContext>
        <datasource id="pivotTableDs"
                    datasourceClass="com.haulmont.charts.web.ui.PivotTableDatasource"
                    allowCommit="false"/>
    </dsContext>

    <layout height="100%">
        <chart:pivotTable id="pivotTable" datasource="pivotTableDs"
                          width="100%"
                          height="100%">
            <chart:properties/>
        </chart:pivotTable>
    </layout>
</window>